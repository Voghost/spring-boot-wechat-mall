<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.dgut.networkengin2018_2.wechat_mall.dao.GoodspicsMapper">
    <resultMap id="BaseResultMap" type="edu.dgut.networkengin2018_2.wechat_mall.entity.Goodspics">
        <id column="pics_id" jdbcType="INTEGER" property="picsId"/>
        <result column="goods_id" jdbcType="INTEGER" property="goodsId"/>
        <result column="pics_big" jdbcType="VARCHAR" property="picsBig"/>
        <result column="pics_mid" jdbcType="VARCHAR" property="picsMid"/>
        <result column="pics_sma" jdbcType="VARCHAR" property="picsSma"/>
    </resultMap>

    <!--相当于一个常量，后面可以引用-->
    <sql id="BaseColumnList">
        pics_id,
        goods_id,pics_big,pics_mid,pics_sma
    </sql>


    <sql id="goodspicsColumns">
        <trim suffixOverrides=",">
            <if test="picsId != null">pics_id,</if>
            <if test="goodsId != null">goods_id,</if>
            <if test="picsBig != null">pics_big,</if>
            <if test="picsMid != null">pics_mid,</if>
            <if test="picsSma != null">pics_sma,</if>
        </trim>
    </sql>

    <sql id="goodspicsValues">
        <trim suffixOverrides=",">
            <if test="picsId != null">#{picsId},</if>
            <if test="goodsId != null">#{goodsId},</if>
            <if test="picsBig != null">#{picsBig},</if>
            <if test="picsMid != null">#{picsMid},</if>
            <if test="picsSma != null">#{picsSma},</if>
        </trim>
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="picsId">
        insert into tb_goods_pics (<include refid="goodspicsColumns"/>) values (<include refid="goodspicsValues"/>)
    </insert>

    <!--更新-->
    <update id="updateByPrimaryKey" parameterType="edu.dgut.networkengin2018_2.wechat_mall.entity.Goodspics">
        update tb_goods_pics
        <set>
            <if test="goodsId != null">
                goods_id = #{goodsId},
            </if>
            <if test="picsBig != null">
                pics_big = #{picsBig},
            </if>
            <if test="picsMid != null">
                pics_mid = #{picsMid},
            </if>
            <if test="picsSma != null">
                pics_sma = #{picsSma},
            </if>
        </set>
        where pics_id = #{picsId}
    </update>

    <!--删除 通过主键-->
    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
        delete
        from tb_goods_pics
        where pics_id = #{picsId}
    </delete>

    <!--获得所有列表-->
    <select id="selectByPrimaryKey" resultMap="BaseResultMap">
        select *
        from tb_goods_pics
        where pics_id = #{picsId}
    </select>

    <!--通过 主键查找商品-->
    <select id="getAllList" resultMap="BaseResultMap">
        select *
        from tb_goods_pics
    </select>

    <!--通过参数(map)<分页>查询-->
    <select id="findGoodspicsList" parameterType="java.util.Map" resultMap="BaseResultMap">
        select
        <include refid="BaseColumnList"/>
        from tb_goods_pics
        <where>
        </where>
        order by pics_id desc
        /*分页查询*/
        <if test="start != null and limit != null">
            limit #{start},#{limit}
        </if>
    </select>


</mapper>